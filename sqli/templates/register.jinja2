{% extends 'base.jinja2' %}

{% block content %}
    <h2>It is alive! =)</h2>
    <p>last visit: {{ last_visited }}</p>

    <a href="/students/">Students</a><br/>
    <a href="/courses/">Courses</a><br/>
    <a href="/">Login</a><br/>
{% endblock %}

{% block aside %}
    {% if not auth_user %}
        <div class="row">
            <form class="col s12" method="POST">
                <div class="card">
                    {% if errors %}
                        <div class="row">
                            <div class="toast" style="top: 0;">
                                {% for error in errors %}
                                    <span>{{ error }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                   
                    <div class="card-content">
                    <span class="card-title">Register</span>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token() }}">
                    <div class="row">
                            <div class="input-field col s12">
                                <input id="first_name" name="first_name" type="text" class="validate">
                                <label for="first_name">first_name</label>
                            </div>
                    </div>
                    <div class="row">
                            <div class="input-field col s12">
                                <input id="middle_name" name="middle_name" type="text" class="validate">
                                <label for="middle_name">first_name</label>
                            </div>
                    </div>
                    <div class="row">
                            <div class="input-field col s12">
                                <input id="last_name" name="last_name" type="text" class="validate">
                                <label for="last_name">last_name</label>
                            </div>
                    </div>
                    <div class="row">
                            <div class="input-field col s12">
                                <input id="username2" name="username2" type="text" class="validate">
                                <label for="username2">username</label>
                            </div>
                    </div>
                    <div class="row">
                            <div class="input-field col s12">
                                <input id="password2" name="password2" type="password" class="validate">
                                <label for="password2">password</label>
                            </div>
                    </div>
        
                    </div>
                    <div class="card-action">
                        <button class="btn pink waves-effect waves-light" type="submit">
                            Register
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    {% endif %}
{% endblock %}
